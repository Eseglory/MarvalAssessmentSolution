#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:3.1 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:3.1 AS build
WORKDIR /src
COPY ["Powerfull.Mobile.Service.csproj", "."]
RUN dotnet restore "./Powerfull.Mobile.Service.csproj"
COPY . .
WORKDIR "/src/."
RUN dotnet build "Powerfull.Mobile.Service.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Powerfull.Mobile.Service.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
CMD ASPNETCORE_URLS=http://*:$PORT dotnet Powerfull.Mobile.Service.dll
#ENTRYPOINT ["dotnet", "Powerfull.Mobile.Service.dll"]